{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noEmit": true,
		"strict": false,
		"target": "esnext",
		"noImplicitAny": false,
		"strictNullChecks": false,
		"skipLibCheck": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
